doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=600")
        title zone
        link(rel="icon", type="image/png", href="icon.png")
        link(rel="stylesheet", href="ascii_small_simple/ascii_small_simple.css", type="text/css", charset="utf-8")
        link(rel="stylesheet", href="style.css")
        script(src="script.js")
    body
        #scene
            #three-container
            #bottom-toolbar
                button#avatar-button(title="change appearance")
                    img(src="icons/avatar.png")
            #avatar-panel(hidden)
                input#avatar-name(type="text")
                canvas#avatar-paint(width=8, height=8)
                .controls
                    button#avatar-update update
                    button#avatar-cancel cancel
        canvas#chat-canvas(width=512, height=512)
        #chat-inputs
            input#chat-input(type="text", placeholder="chat message...", maxlength="160")
        #entry-splash
            #entry-panel
                form#entry
                    h1 you are about to enter a zone
                    input#join-name(type="text", placeholder="your name...", maxlength="16")
                    input#entry-button(type="submit" value="enter" disabled)
